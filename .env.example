# VisionsAlign Environment Variables
# Copy this file to .env.local for development

# =============================================================================
# REQUIRED VARIABLES
# =============================================================================

# App Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here-generate-with-openssl-rand-base64-32

# Authentication (Google OAuth)
GOOGLE_ID=your-google-client-id
GOOGLE_SECRET=your-google-client-secret

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/visions_align

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
NEXT_PUBLIC_STRIPE_PRICE_ID_PRO=price_your_pro_plan_id
NEXT_PUBLIC_STRIPE_PRICE_ID_DIRECTOR=price_your_director_plan_id

# Email Service
RESEND_API_KEY=re_your_resend_api_key

# AI Services
OPENAI_API_KEY=sk-your-openai-api-key
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/playbooks

# Admin Configuration
ADMIN_EMAILS=admin@visionsalign.com,your-email@example.com

# =============================================================================
# OPTIONAL VARIABLES
# =============================================================================

# Feature Flags
NEXT_PUBLIC_PRE_BETA_MODE=false

# Custom Email From Address
EMAIL_FROM=noreply@visionsalign.com

# Site URL (defaults to NEXTAUTH_URL if not set)
SITE_URL=https://visionsalign.com

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Node Environment (automatically set by Next.js)
NODE_ENV=development
